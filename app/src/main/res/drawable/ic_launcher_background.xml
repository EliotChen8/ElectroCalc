<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景形状为矩形 -->
    <item>
        <shape android:shape="rectangle">
            <!-- 填充颜色为透明，以显示渐变色 -->
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <!-- 添加从左上到右下的渐变色 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startX="0"
                android:startY="0"
                android:endX="108"
                android:endY="108"
                android:angle="225"
                android:startColor="#2bb7b3"
                android:endColor="#003F43" />
        </shape>
    </item>
</layer-list>
